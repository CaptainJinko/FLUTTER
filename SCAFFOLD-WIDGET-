//With the scaffold you can insert the AppBar widget with AppBar , title  and it properties eg backgroud colors etc

import 'package:flutter/material.dart';

void main() {
  runApp(MaterialApp(
    home: Scaffold(
      appBar: AppBar(
        title: Center(child: Text('I Am Rich')),
      ),
    ),
  ));
}

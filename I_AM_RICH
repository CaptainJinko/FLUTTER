import 'package:flutter/material.dart';

void main() {
  runApp(
    MaterialApp(
      home: Scaffold(
        backgroundColor: Colors.indigo,
        appBar: AppBar(
          backgroundColor: Colors.teal[900],
          title: Center(
            child: Text(
              'Sierra Leone Diamond',
              style: TextStyle(
                fontSize: 30,
              ),
            ),
          ),
        ),
        body: Center(
          child: Image.asset('images/diamond.png'),
        ),
      ),
    ),
  );
}

